<h2>Lista de Filmes</h2>
<hr>
<a href="/admin/filmes/add" <button class="btn btn-info">Novo filme</button></a>
<div class="card-group mt-4">
    {{#each filmes}}
    <div class="card">
        <img class="admin card-img-top" src={{linkimdb}} alt="Card image cap">
        <div class="card-body">
            <p>Nome:</p>
            <h5>{{Nome}}</h5>
            

        </div>
        <div>
            <small>Categoria:</small>
            <small>{{categoria}}</small>
            <a href="/admin/filmes/edit/{{id}}" <button class="btn btn-info mt-2">Editar</button></a>
            <form action="/admin/filmes/delete/{{_id}}" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                <button type="submit" class="btn btn-danger">Apagar</button>
            </form>
        </div>
    </div>

    {{else}}

    <p> Nenhum Filme Registrado</p>
    {{/each}}
</div>